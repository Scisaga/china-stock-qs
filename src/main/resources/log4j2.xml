<?xml version="1.0" encoding="UTF-8"?>

<configuration status="INFO">

	<appenders>
	
		<File name="core-log" fileName="china-stock-qs.log" append="false">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] [%class{36}:%L] %M - %msg%xEx%n" />
		</File>
		
		<Console name="Console" target="SYSTEM_OUT">
            <ThresholdFilter level="trace" onMatch="ACCEPT"
                onMismatch="DENY" />
            <PatternLayout charset="UTF-8"
                pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] [%class{36}:%L] %M - %msg%xEx%n" />
        </Console>

	</appenders>

	<loggers>
		<root level="info">
			<appender-ref ref="Console"/>
			<appender-ref ref="core-log" />
		</root>
	</loggers>

</configuration>